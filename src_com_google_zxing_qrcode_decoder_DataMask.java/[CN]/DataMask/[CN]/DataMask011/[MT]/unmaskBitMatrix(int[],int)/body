{
  int bitMask=0;
  int count=0;
  int offset=0;
  for (int j=0; j < dimension; j++) {
    for (int i=0; i < dimension; i++) {
      if ((i + j) % 3 == 0) {
        bitMask|=1 << count;
      }
      if (++count == 32) {
        bits[offset++]^=bitMask;
        count=0;
        bitMask=0;
      }
    }
  }
  bits[offset]^=bitMask;
}
