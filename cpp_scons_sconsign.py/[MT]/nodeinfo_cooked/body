def nodeinfo_cooked(name, ninfo, prefix=''):
    try:
        field_list = ninfo.field_list
    except AttributeError:
        field_list = []
    if ('\n' in name):
        name = repr(name)
    outlist = ([(name + ':')] + [_f for _f in [field(x, ninfo, Verbose) for x in field_list] if _f])
    if Verbose:
        sep = ('\n    ' + prefix)
    else:
        sep = ' '
    return sep.join(outlist)
