{
  StringBuffer result=new StringBuffer(to);
  boolean hasParams=false;
  if (subject != null) {
    result.append(hasParams ? '&' : '?');
    hasParams=true;
    result.append("subject=");
    result.append(subject);
  }
  if (body != null) {
    result.append(hasParams ? '&' : '?');
    hasParams=true;
    result.append("body=");
    result.append(body);
  }
  return result.toString();
}
