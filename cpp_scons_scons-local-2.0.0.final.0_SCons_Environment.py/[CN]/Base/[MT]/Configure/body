def Configure(self, *args, **kw):
    nargs = [self]
    if args:
        nargs = (nargs + self.subst_list(args)[0])
    nkw = self.subst_kw(kw)
    nkw['_depth'] = (kw.get('_depth', 0) + 1)
    try:
        nkw['custom_tests'] = self.subst_kw(nkw['custom_tests'])
    except KeyError:
        pass
    return SCons.SConf.SConf(*nargs, **nkw)
