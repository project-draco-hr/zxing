{
  Debug.DCHECK(num_bits >= 0 && num_bits <= 32);
  int num_bits_left=num_bits;
  while (num_bits_left > 0) {
    if ((sizeInBits & 0x7) == 0 && num_bits_left >= 8) {
      final int newByte=(value >> (num_bits_left - 8)) & 0xff;
      appendByte(newByte);
      num_bits_left-=8;
    }
 else {
      final int bit=(value >> (num_bits_left - 1)) & 1;
      AppendBit(bit);
      --num_bits_left;
    }
  }
}
