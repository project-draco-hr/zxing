{
  StringBuffer result=new StringBuffer(20);
  result.append(latitude);
  result.append(", ");
  result.append(longitude);
  if (altitude > 0.0) {
    result.append(", ");
    result.append(altitude);
    result.append('m');
  }
  if (query != null) {
    result.append(" (");
    result.append(query);
    result.append(')');
  }
  return result.toString();
}
