{
  StringBuffer result=new StringBuffer();
  result.append("geo:");
  result.append(latitude);
  result.append(',');
  result.append(longitude);
  if (altitude > 0) {
    result.append(',');
    result.append(altitude);
  }
  if (query != null) {
    result.append('?');
    result.append(query);
  }
  return result.toString();
}
