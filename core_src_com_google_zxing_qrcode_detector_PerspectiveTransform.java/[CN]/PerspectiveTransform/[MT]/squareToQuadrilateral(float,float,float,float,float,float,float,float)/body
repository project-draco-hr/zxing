{
  float dx1=x1 - x2;
  float dx2=x3 - x2;
  float dx3=x0 - x1 + x2 - x3;
  float dy1=y1 - y2;
  float dy2=y3 - y2;
  float dy3=y0 - y1 + y2 - y3;
  float denominator=dx1 * dy2 - dx2 * dy1;
  float a13=(dx3 * dy2 - dx2 * dy3) / denominator;
  float a23=(dx1 * dy3 - dx3 * dy1) / denominator;
  return new PerspectiveTransform(x1 - x0 + a13 * x1,y1 - y0 + a13 * y1,a13,x3 - x0 + a23 * x3,y3 - y0 + a23 * y3,a23,x0,y0,1.0f);
}
