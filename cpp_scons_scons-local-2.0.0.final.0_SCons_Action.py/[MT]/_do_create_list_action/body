def _do_create_list_action(act, kw):
    'A factory for list actions.  Convert the input list into Actions\n    and then wrap them in a ListAction.'
    acts = []
    for a in act:
        aa = _do_create_action(a, kw)
        if (aa is not None):
            acts.append(aa)
    if (not acts):
        return ListAction([])
    elif (len(acts) == 1):
        return acts[0]
    else:
        return ListAction(acts)
