{
  List<String> supportedFlashModes=parameters.getSupportedFlashModes();
  String flashMode;
  if (on) {
    flashMode=CameraConfigurationUtils.findSettableValue("flash mode",supportedFlashModes,Camera.Parameters.FLASH_MODE_TORCH,Camera.Parameters.FLASH_MODE_ON);
  }
 else {
    flashMode=CameraConfigurationUtils.findSettableValue("flash mode",supportedFlashModes,Camera.Parameters.FLASH_MODE_OFF);
  }
  if (flashMode != null) {
    if (flashMode.equals(parameters.getFlashMode())) {
      Log.i(TAG,"Flash mode already set to " + flashMode);
    }
 else {
      Log.i(TAG,"Setting flash mode to " + flashMode);
      parameters.setFlashMode(flashMode);
    }
  }
}
