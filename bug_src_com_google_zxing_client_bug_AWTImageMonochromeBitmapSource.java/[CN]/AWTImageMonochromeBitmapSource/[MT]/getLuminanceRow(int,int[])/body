{
  int width=getWidth();
  if (row == null || row.length < width) {
    row=new int[width];
  }
  int offset=y * width;
  for (int x=0; x < width; x++) {
    int pixel=pixels[offset + x];
    row[x]=(((pixel & 0x00FF0000) >> 16) + ((pixel & 0x0000FF00) >> 7) + (pixel & 0x000000FF)) >> 2;
  }
  return row;
}
