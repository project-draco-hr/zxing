{
{
    BitVector bits=new BitVector();
    Encoder.appendLengthInfo(1,1,Mode.NUMERIC,bits);
    assertEquals("0000000001",bits.toString());
  }
{
    BitVector bits=new BitVector();
    Encoder.appendLengthInfo(2,10,Mode.ALPHANUMERIC,bits);
    assertEquals("00000000010",bits.toString());
  }
{
    BitVector bits=new BitVector();
    Encoder.appendLengthInfo(255,27,Mode.BYTE,bits);
    assertEquals("0000000011111111",bits.toString());
  }
{
    BitVector bits=new BitVector();
    Encoder.appendLengthInfo(512,40,Mode.KANJI,bits);
    assertEquals("001000000000",bits.toString());
  }
}
