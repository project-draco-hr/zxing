{
  int max=counters.length;
  int sum=0;
  for (  int counter : counters) {
    sum+=counter;
  }
  int pattern=0;
  for (int i=0; i < max; i++) {
    int scaled=Math.round(counters[i] * 9.0f / sum);
    if (scaled < 1 || scaled > 4) {
      return -1;
    }
    if ((i & 0x01) == 0) {
      for (int j=0; j < scaled; j++) {
        pattern=(pattern << 1) | 0x01;
      }
    }
 else {
      pattern<<=scaled;
    }
  }
  return pattern;
}
