{
  if (column == null || column.getSize() < getHeight) {
    column=new BitArray(getHeight);
  }
 else {
    column.clear();
  }
  if (matrix == null) {
    matrix=binarizer.getBlackMatrix();
  }
  for (int y=0; y < getHeight; y++) {
    if (matrix.get(x,startY + y)) {
      column.set(y);
    }
  }
  return column;
}
