{
  if (row == null || row.getSize() < getWidth) {
    row=new BitArray(getWidth);
  }
 else {
    row.clear();
  }
  if (matrix == null) {
    matrix=binarizer.getBlackMatrix();
  }
  for (int x=0; x < getWidth; x++) {
    if (matrix.get(startX + x,y)) {
      row.set(x);
    }
  }
  return row;
}
