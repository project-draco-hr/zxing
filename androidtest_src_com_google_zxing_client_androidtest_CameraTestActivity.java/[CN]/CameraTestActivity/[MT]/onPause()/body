{
  super.onPause();
  CameraManager.get().stopPreview();
  if (saveThread != null) {
    Message quit=Message.obtain(saveThread.handler,R.id.quit);
    quit.sendToTarget();
    try {
      saveThread.join();
    }
 catch (    InterruptedException e) {
    }
    saveThread=null;
  }
  CameraManager.get().closeDriver();
}
