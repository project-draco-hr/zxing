{
  for (  String arg : args) {
    if ("-row".equals(arg)) {
      rowSampling=true;
    }
 else     if ("-2d".equals(arg)) {
      rowSampling=false;
    }
 else     if (arg.startsWith("-")) {
      System.err.println("Ignoring unrecognized option: " + arg);
    }
  }
  for (  String arg : args) {
    if (arg.startsWith("-")) {
      continue;
    }
    File inputFile=new File(arg);
    if (inputFile.exists()) {
      if (inputFile.isDirectory()) {
        for (        File input : inputFile.listFiles()) {
          String filename=input.getName().toLowerCase(Locale.ENGLISH);
          if (filename.startsWith(".") || filename.endsWith(".txt")) {
            continue;
          }
          if (filename.contains(".mono.png") || filename.contains(".row.png") || filename.contains(".2d.png")) {
            continue;
          }
          convertImage(input.toURI());
        }
      }
 else {
        convertImage(inputFile.toURI());
      }
    }
 else {
      convertImage(new URI(arg));
    }
  }
}
