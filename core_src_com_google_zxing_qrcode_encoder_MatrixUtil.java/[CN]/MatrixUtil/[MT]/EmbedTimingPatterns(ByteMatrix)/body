{
  for (int i=8; i < matrix.width() - 8; ++i) {
    final int bit=(i + 1) % 2;
    if (!IsValidValue(matrix.get(6,i))) {
      throw new WriterException();
    }
    if (IsEmpty(matrix.get(6,i))) {
      matrix.set(6,i,bit);
    }
    if (!IsValidValue(matrix.get(i,6))) {
      throw new WriterException();
    }
    if (IsEmpty(matrix.get(i,6))) {
      matrix.set(i,6,bit);
    }
  }
}
