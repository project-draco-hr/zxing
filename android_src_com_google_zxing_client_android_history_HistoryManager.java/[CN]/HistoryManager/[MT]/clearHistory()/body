{
  SQLiteOpenHelper helper=new DBHelper(activity);
  SQLiteDatabase db;
  try {
    db=helper.getWritableDatabase();
  }
 catch (  SQLiteException sqle) {
    Log.w(TAG,"Error while opening database",sqle);
    return;
  }
  try {
    db.delete(DBHelper.TABLE_NAME,null,null);
  }
  finally {
    db.close();
  }
}
