{
  uri=uri.trim();
  int protocolEnd=uri.indexOf(':');
  if (protocolEnd < 0) {
    uri="http://" + uri;
  }
 else   if (isColonFollowedByPortNumber(uri,protocolEnd)) {
    uri="http://" + uri;
  }
 else {
    uri=uri.substring(0,protocolEnd).toLowerCase() + uri.substring(protocolEnd);
  }
  return uri;
}
