{
  int hostStart=uri.indexOf(':');
  hostStart++;
  int uriLength=uri.length();
  while (hostStart < uriLength && uri.charAt(hostStart) == '/') {
    hostStart++;
  }
  int hostEnd=uri.indexOf('/',hostStart);
  if (hostEnd < 0) {
    hostEnd=uriLength;
  }
  int at=uri.indexOf('@',hostStart);
  return at >= hostStart && at < hostEnd;
}
