{
  if (useAutoFocus) {
    cancelOutstandingTask();
    if (!stopped && !focusing) {
      try {
        camera.autoFocus(this);
        focusing=true;
      }
 catch (      RuntimeException re) {
        Log.w(TAG,"Unexpected exception while focusing",re);
        autoFocusAgainLater();
      }
    }
  }
}
