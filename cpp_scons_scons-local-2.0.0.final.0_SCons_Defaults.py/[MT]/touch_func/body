def touch_func(dest):
    SCons.Node.FS.invalidate_node_memos(dest)
    if (not SCons.Util.is_List(dest)):
        dest = [dest]
    for file in dest:
        file = str(file)
        mtime = int(time.time())
        if os.path.exists(file):
            atime = os.path.getatime(file)
        else:
            open(file, 'w')
            atime = mtime
        os.utime(file, (atime, mtime))
