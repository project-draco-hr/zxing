{
  if (email == null) {
    return false;
  }
  boolean atFound=false;
  boolean periodFound=false;
  for (int i=0; i < email.length(); i++) {
    char c=email.charAt(i);
    if (c == '@') {
      if (atFound) {
        return false;
      }
      atFound=true;
    }
 else     if (c == '.') {
      periodFound=true;
    }
 else     if (c == ' ' || c == '\n') {
      return false;
    }
  }
  return atFound && periodFound;
}
