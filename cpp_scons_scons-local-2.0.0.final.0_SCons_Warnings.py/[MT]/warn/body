def warn(clazz, *args):
    global _enabled, _warningAsException, _warningOut
    warning = clazz(args)
    for (clazz, flag) in _enabled:
        if isinstance(warning, clazz):
            if flag:
                if _warningAsException:
                    raise warning
                if _warningOut:
                    _warningOut(warning)
            break
