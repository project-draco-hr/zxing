def isfortran(env, source):
    'Return 1 if any of code in source has fortran files in it, 0\n    otherwise.'
    try:
        fsuffixes = env['FORTRANSUFFIXES']
    except KeyError:
        return 0
    if (not source):
        return 0
    for s in source:
        if s.sources:
            ext = os.path.splitext(str(s.sources[0]))[1]
            if (ext in fsuffixes):
                return 1
    return 0
