def CreateJarBuilder(env):
    try:
        java_jar = env['BUILDERS']['Jar']
    except KeyError:
        fs = SCons.Node.FS.get_default_fs()
        jar_com = SCons.Action.Action('$JARCOM', '$JARCOMSTR')
        java_jar = SCons.Builder.Builder(action=jar_com, suffix='$JARSUFFIX', src_suffix='$JAVACLASSSUFIX', src_builder='JavaClassFile', source_factory=fs.Entry)
        env['BUILDERS']['Jar'] = java_jar
    return java_jar
