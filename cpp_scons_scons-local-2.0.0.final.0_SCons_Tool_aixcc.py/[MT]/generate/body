def generate(env):
    'Add Builders and construction variables for xlc / Visual Age\n    suite to an Environment.'
    (path, _cc, _shcc, version) = get_xlc(env)
    if path:
        _cc = os.path.join(path, _cc)
        _shcc = os.path.join(path, _shcc)
    cc.generate(env)
    env['CC'] = _cc
    env['SHCC'] = _shcc
    env['CCVERSION'] = version
